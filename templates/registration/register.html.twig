{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 text-red-700 border border-red-400 rounded p-4 mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-3xl font-semibold text-center text-gray-800 mb-8">Create Your Account</h1>

            {{ form_start(registrationForm, {attr: {class: 'space-y-6'}}) }}

                <div class="mb-4">
                    {{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'text-gray-600 text-sm font-medium mb-2'}}) }}
                    {{ form_widget(registrationForm.email, {
                        attr: {
                            class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'text-gray-600 text-sm font-medium mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {
                        attr: {
                            class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex items-center mb-6">
                    {{ form_widget(registrationForm.agreeTerms, {
                        attr: {
                            class: 'mr-2'
                        }
                    }) }}
                    <label for="agreeTerms" class="text-gray-600 text-sm">I agree to the terms and conditions</label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-lg shadow-md hover:bg-blue-800">
                    Sign Up
                </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
