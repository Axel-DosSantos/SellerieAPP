                <a href="{{ path('app_logout') }}" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                    Logout
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-white hover:text-blue-400">Login</a>
                <a href="{{ path('app_register') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
