                <a href="{{ path('user_reservations') }}" class="text-white hover:text-blue-400">My Reservations</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="/admin" class="text-white hover:text-blue-400">Admin</a>
            {% endif %}
        </div>
        
        <!-- User Buttons -->
        <div class="flex items-center space-x-4">
