{% extends 'base.html.twig' %}

{% block title %}Welcome to SellerieApp{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        {% if email %}
            <h1 class="text-3xl font-bold text-center text-gray-800">Welcome {{ email }}</h1>
            <p class="mt-4 text-lg text-gray-600 text-center">
                Manage your equipment inventory.
            </p>
        {% else %}
            <h1 class="text-3xl font-bold text-center text-gray-800">Welcome to SellerieApp</h1>
            <p class="mt-4 text-lg text-gray-600 text-center">
                SellerieApp simplifies equipment management and inventory for amateurs and professionals alike. Find everything you need with ease!
            </p>
        {% endif %}

        <div class="mt-8 flex justify-center">
            <a href="{{ path('app_equipment') }}" class="bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-300">View Inventory</a>
            {% if not email %}
                <a href="{{ path('app_register') }}" class="ml-4 bg-green-600 text-white font-bold py-2 px-4 rounded hover:bg-green-700 transition duration-300">Sign Up</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
